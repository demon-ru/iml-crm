<openerp>
<data >
        <!-- GROUPS -->
        <record id="test_group_client_department" model="res.groups">
            <field name="name">Test group client dept</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_client_dept_manager" model="res.groups">
            <field name="name">Group client dept manager</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <!-- RULES -->
        <record id="client_department_employee_res_partner" model="ir.rule">
            <field name="name">Res.users: access only if responsible or responsoble in its opportunities</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="groups" eval="[(4, ref('test_group_client_department'))]"/>
            <field name="domain_force">['|', '|', '|', ('user_id.id', '=', user.id), ('opportunity_ids.user_id.id', '=', user.id), ('id', '=', user.partner_id.id), ('user_id.id', '=', False)]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="client_department_employee_crm_lead" model="ir.rule">
            <field name="name">CRM.lead: access only if responsible or responsoble is not set</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="groups" eval="[(4, ref('test_group_client_department'))]"/>
            <field name="domain_force">['|', ('user_id.id', '=', user.id), ('user_id', '=', False)]</field>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="client_department_employee_crm_claim" model="ir.rule">
            <field name="name">CRM.claim: access only if responsible or responsible in its partner</field>
            <field name="model_id" ref="model_crm_claim"/>
            <field name="groups" eval="[(4, ref('test_group_client_department'))]"/>
            <field name="domain_force">['|', ('user_id.id', '=', user.id), ('partner_id.user_id.id', '=', user.id)]</field>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="client_department_employee_crm_event" model="ir.rule">
            <field name="name">CRM.event: access only if responsible</field>
            <field name="model_id" ref="model_calendar_event"/>
            <field name="groups" eval="[(4, ref('test_group_client_department'))]"/>
            <field name="domain_force">[('user_id.id', '=', user.id)]</field>
        </record>
