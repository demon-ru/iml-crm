<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_form_iml_crm_oppor1" model="ir.ui.view">
            <field name="name">view.form.iml.crm.oppor.inherited1</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field eval="21" name="priority"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//group/group/field[@name='user_id']" position="replace"/>
                	<xpath expr="//group/group/div/field[@name='section_id']" position="replace"/>
                	<xpath expr="//group/group/label[@for='section_id']" position="replace"/>
                	<xpath expr="//group/group/div/button[@name='case_escalate']" position="replace"/>	
                	<xpath expr="//group/group/div[@groups='base.group_multi_salesteams']" position="replace"/>
                	<xpath expr="//group/group/field[@name='categ_ids']" position="replace"/>
		    		<field name="partner_id" position="after">
						<field name="type_of_opport_id"/>
						<field name="categ_ids"
                               widget="many2many_tags"
                               context="{'object_name': 'crm.lead'}"
                               domain="[('object_id.model', '=', 'crm.lead')]"/>
						<field name="user_id" on_change="on_change_user(user_id, context)" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'base.group_sale_salesman_all_leads'] }"/>
						<label for="section_id" groups="base.group_multi_salesteams"/>
						<div groups="base.group_multi_salesteams">
							<field name="section_id"/>
						</div>
		    		</field> 	
					<field name="function" position="after">
						<field name="phone"/>
					</field>
					<field name="fax" position="after">
						<field name="email_from" string="Email" widget="email"/>
					</field>
					<xpath expr="//group/group/field[@name='email_from']" position="replace">
						<field name="email_from" invisible="True"/>
					</xpath>
					<xpath expr="//group/group/field[@name='phone']" position="replace">
						<field name="phone" invisible="True"/>
					</xpath>
					<xpath expr="//group/group/field[@name='phone']" position="replace"/>
					<xpath expr="//page[@string='Lead']/group/group/label[@string='Address']" position="replace">
						<label for="street" string="Address" invisible="True"/>
					</xpath>
					<xpath expr="//page[@string='Lead']/group/group/div" position="replace">
						<field name="city" placeholder="City" style="width: 40%%" invisible="True"/>
						<field name="state_id" options='{"no_open": True}' on_change="onchange_state(state_id)" placeholder="State" style="width: 24%%" invisible="True"/>
						<field name="zip" placeholder="ZIP" style="width: 34%%" invisible="True"/>
					</xpath>
					<xpath expr="//page[@string='Lead']/group/group[@name='mailings']" position="replace"/>
					<xpath expr="//page[@string='Lead']/group/group[@string='Misc']" position="replace"/>
					<xpath expr="//page[@string='Lead']/group" position="after">
						<field name="type" invisible="1"/>
					</xpath>
					<xpath expr="//page[@string='Lead']/group/group[@string='References']" position="replace"/>
					<xpath expr="//button[@name='%(crm.crm_case_categ_phone_incoming0)d']/div" position="replace"/>
					<xpath expr="//button[@name='%(crm.crm_case_categ_phone_incoming0)d']">
						<div>Звонки</div>
					</xpath>
					<xpath expr="//button[@name='action_schedule_meeting']/field[@name='meeting_count']" position="replace"/> 
					<xpath  expr="//button[@name='action_schedule_meeting']">
						<field string="Встречи" name="meeting_count" widget="statinfo"/>
					</xpath>
					<xpath expr="//page[@string='Internal Notes']" position="replace"/>
					<xpath expr="//page[@string='Lead']" position="after">
						<page string="Примечания">
							<field name="description"/>
						</page>
					</xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
