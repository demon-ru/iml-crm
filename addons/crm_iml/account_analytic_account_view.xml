<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 

      <record id="view_account_form_iml_crm1" model="ir.ui.view">
        <field name="name">view.account.analytic.form.iml.crm.inherited1</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field eval="18" name="priority"/>
        <field name="arch" type="xml">
            <data>
              <!-- замена на readonly -->
              <field name="name" position="replace">
                  <field name="name" class="oe_inline" readonly="True"/>
              </field>
              <field name="partner_id" position="replace">
                  <field name="partner_id" on_change="on_change_partner_id(partner_id, name)" readonly="True"/>
              </field>

              <!-- замена на readonly -->

              <xpath expr="//group[@name='main']/group/field[@name='manager_id']" position='replace'/>
              <xpath expr="//group[@name='main']/group/field[@name='partner_id']" position="after">
                <field name="manager_id" string="Ответственный" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'account.group_account_manager']}"/>
                <field name='dateOfContracts' readonly="True"/>
                <field name="date_start" readonly="True"/>
                <label for="date" string="End Date"/>
                <div name="duration">
                    <field name="date" class="oe_inline" readonly="True"/>
                </div>
              </xpath>
              <xpath expr="//group/group/field[@name='type']" position="replace"/>
              <xpath expr="//group/group/field[@name='template_id']" position="after">
                <field name="type" invisible="1"/>
              </xpath>
              <xpath expr="//page[@name='contract_page']" position="replace"/>
              <xpath expr="//group/group/field[@name='code']" position="replace"/>
              <notebook>
                <page name='base_info' string= 'Основное'>  
                    <group>
                        <field name="crm_number" readonly="True"/>
                        <field  name="storage_of_shipping" readonly="True"/>
                        <field  name="region_of_delivery" readonly="True"/>
                        <field  name="fio_authorized person_nominative_case" string="ФИО уполномоченного лица, именительный падеж" readonly="True"/>
                        <field  name="fio_authorized person_genitive_case" string="ФИО уполномоченного лица, родительный падеж" readonly="True"/>
                       	<field  name="authorized_person_position_nominative_case" readonly="True"/>
                        <field  name="authorized_person_position_genetive_case" readonly="True"/>
                        <field  name="number_of_powerOfattorney" readonly="True"/>
                       	<field  name="date_of_powerOfattorney" readonly="True"/>
                    </group>
                </page>
                <page name='Description' string= 'Примечания'>
	              <separator string="Terms and Conditions" name="description"/>
                  <field name="description"/>
                </page>
              </notebook>
            </data>
          </field>
        </record>

        <record id="view_account_tree_iml_crm1" model="ir.ui.view">
          <field name="name">view.crm.iml.analytic.acount.inherited1</field>
          <field name="model">account.analytic.account</field>
          <field name="inherit_id" ref="account.view_account_analytic_account_tree"/>
          <field eval="18" name="priority"/>
          <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='complete_name']" position="replace"/>
            <field name="name" position="after">
              <field name="complete_name" string="Название"/>
            </field>
            <xpath expr="//tree/field[@name='type']" position="replace"/>
            <field name="parent_id" position="after">
              <field name="type" string="Тип документа"/>
              <field name="dateOfContracts"/>
              <field name="storage_of_shipping"/>
              <field name="region_of_delivery"/>
            </field>
            <xpath expr="//tree/field[@name='code']" position='replace'/>
            <xpath expr="//tree/field[@name='debit']" position='replace'/>
            <xpath expr="//tree/field[@name='credit']" position='replace'/>
            <xpath expr="//tree/field[@name='balance']" position='replace'/>
          </field>
        </record>
     </data>
</openerp>
