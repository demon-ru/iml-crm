<?xml version="1.0"?>
<openerp>
    <data>
        <record id="crm_iml_exchangeserver_view" model="ir.ui.view">
        <field name="name">ExchangeServerView</field>
        <field name="model">crm.iml.exchange_server_settings</field>
	    <field name="type">form</field>
            <field name="arch" type="xml">
				<header>
					<button name="test_iml_crm_sql_server" string="Test connect to database" type="object"/>
					<button name="import_records" string="Import from database" type="object"/>
			    </header>
			  	<sheet>
				    <group col="2">
						<field name="name"/>
				    </group>
				    <group col="2" string="Information about connection">
				    	<field name="lastTestDate"/>
				    </group>
				    <group col="2" string="Server Information">		
						<field name="server"/>
					  	<field name="user"/>
					  	<field name="password"/>
					  	<field name="dbname"/>	
				  	</group>
			  	</sheet>
            </field>
        </record>
        
		<record id="crm_iml_exchangeserver_tree" model="ir.ui.view">
	        <field name="name">ExchangeServerTree</field>
	        <field name="model">crm.iml.exchange_server_settings</field>
		    <field name="type">tree</field>
	        <field name="arch" type="xml">
			 	<group col="2" string="Server Information">
				  	<field name="name"/>			
				  	<field name="server"/>
				  	<field name="user"/>
				  	<field name="dbname"/>	
			  	</group>
	        </field>
	    </record>
    </data>
</openerp>
